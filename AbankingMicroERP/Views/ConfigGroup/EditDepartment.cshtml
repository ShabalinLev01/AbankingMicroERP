@model Department
@{
	ViewData["Title"] = "Изменение отдела";
}
<div class="text-center">
	<h1 class="display-4">Изменение отдела</h1>
</div>

<div class="card-body">

	<form asp-antiforgery="true" asp-action="EditDepartment" asp-controller="ConfigGroup" style="margin-left: 25%; margin-right: 25%;">
		<div class="validation" asp-validation-summary="ModelOnly"></div>
		<div class="form-group">
			<input type="text" class="form-control" id="formId" name="Id" asp-for="Id" style="display: none;" required>
		</div>
		<div class="form-group">
			<label for="formName" asp-for="Name">Название отдела</label>
			<input type="text" class="form-control" id="formName" name="Name" placeholder="Название отдела" asp-for="Name" required>
			<span asp-validation-for="Name" />
		</div>
		<button type="submit" class="btn btn-primary mb-2">Изменить отдел</button>
	</form>
</div>